@{
    ViewData["Title"] = "Вход в систему";
    @model StudentsUnion.ViewModels.LoginViewModel
}

<div class="text-center text-muted shadow">
    <h2 class="p-3">Войти в систему Профкома СГТУ</h2>
    <form asp-action="Login" asp-controller="Auth" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="All"></div>
        <div class="row p-3">
            <div class="form-group p-3 col">
                <label asp-for="Email">Эл. почта</label>
                <input type="text" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group p-3">
                <label asp-for="Password">Пароль</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group p-3">
                <input type="submit" value="Войти" class="btn btn-outline-dark" />
            </div>
        </div>
    </form>
</div>