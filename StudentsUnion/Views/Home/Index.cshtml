@{
    ViewData["Title"] = "Система для профкома студентов СГТУ";
    @model StudentsUnion.ViewModels.BidViewModel
}

<div class="text-center">
    <h1 class="display-4">Система для профкома студентов СГТУ</h1>
    <p>Если вам необходима помощь, можете оставить заявку ниже. С вами свяжутся наши волонтеры.</p>
</div>
@if (TempData["Alert"] != null)
{
    <div class="alert alert-success">
        @TempData["Alert"]
    </div>
}
<div class="container col-md-8">
    <h3 class="text-center p-3">Заявка</h3>
    <form asp-action="CreateBid" asp-controller="Home">
        <div class="form-group p-3">
            <label asp-for="FIO">Фамилия Имя Отчество</label><br />
            <input class="form-control" type="text" asp-for="FIO" />
        </div>
        <div class="form-group p-3">
            <label asp-for="Phone">Номер телефона</label><br />
            <input class="form-control" type="text" asp-for="Phone" />
        </div>
        <div class="form-group p-3">
            <label asp-for="Description">Комментарий</label><br />
            <input class="form-control" type="text" asp-for="Description" />
        </div>
        <div class="form-group p-3">
            <input class="btn btn-success" type="submit" value="Отправить" />
        </div>
    </form>
</div>
